<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Resume From Json</a>
        <button title="Navigation Menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Resume.Name
            </NavLink>
        </div>

        @if (Resume.Experience != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="#experience">
                    <span class="bi bi-building-fill-nav-menu" aria-hidden="true"></span> Experience
                </NavLink>
            </div>
        }

        @if (Resume.Groups != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="#groups">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Groups
                </NavLink>
            </div>
        }

        @if (Resume.Certifications != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="certifications">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Certifications
                </NavLink>
            </div>
        }

        @foreach (var url in @Resume.Urls ?? [])
        {
            @switch (url.Name)
            {
                case "facebook":
                case "github":
                case "instagram":
                case "linkedin":
                case "mastodon":
                case "stack-overflow":
                case "substack":
                case "tiktok":
                case "twitch":
                case "twitter":
                case "x":
                case "youtube":
                    break;
                default:
                    <div class="nav-item px-3">
                        <a class="nav-link" href="@url.Link" target="_blank">
                            <span class="bi bi-social-default-nav-menu" aria-hidden="true"></span> @url.Name
                        </a>
                    </div>
                    break;
            }
        }
    </nav>
</div>

@code {

    [Parameter]
    public MainLayout.Resume Resume { get; set; } = null!;

    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}